<main class="w-full max-w-md mx-auto p-6">
  <div class="mt-10 bg-gradient-to-r from-gray-600 to-gray-900 border border-gray-500 rounded-xl shadow-2xl shadow-gray-800">
    <div class="p-4 sm:p-7">
      <div class="text-center">
        <h1 class="block text-2xl font-bold text-gray-300">Sign in</h1>
        <p class="mt-2 text-sm text-gray-400">
          Don't have an account yet?
          <a class="text-gray-300 decoration-2 hover:underline font-medium" href="/register">
            Sign up here
          </a>
        </p>
      </div>

      <div class="mt-5">
        <div class="my-3">
          <% flash.each do |type, msg| %>
            <%= content_tag :div, msg, class: build_alert_classes(type) %>
          <% end %>
        </div>

        <%= form_tag('/auth/google_oauth2', method: 'post', data: {turbo: false}) do %>
          <button type="submit" class="w-full py-3 px-4 inline-flex justify-center items-center gap-2 rounded-md border border-gray-400 font-medium bg-transparent text-gray-400 align-middle transition-all text-sm hover:border-gray-500 hover:text-gray-300">
            <svg class="w-5 h-auto" width="46" height="47" viewBox="0 0 46 47" fill="none">
              <path d="M46 24.0287C46 22.09 45.8533 20.68 45.5013 19.2112H23.4694V27.9356H36.4069C36.1429 30.1094 34.7347 33.37 31.5957 35.5731L31.5663 35.8669L38.5191 41.2719L38.9885 41.3306C43.4477 37.2181 46 31.1669 46 24.0287Z" fill="#4285F4"/>
              <path d="M23.4694 47C29.8061 47 35.1161 44.9144 39.0179 41.3012L31.625 35.5437C29.6301 36.9244 26.9898 37.8937 23.4987 37.8937C17.2793 37.8937 12.0281 33.7812 10.1505 28.1412L9.88649 28.1706L2.61097 33.7812L2.52296 34.0456C6.36608 41.7125 14.287 47 23.4694 47Z" fill="#34A853"/>
              <path d="M10.1212 28.1413C9.62245 26.6725 9.32908 25.1156 9.32908 23.5C9.32908 21.8844 9.62245 20.3275 10.0918 18.8588V18.5356L2.75765 12.8369L2.52296 12.9544C0.909439 16.1269 0 19.7106 0 23.5C0 27.2894 0.909439 30.8731 2.49362 34.0456L10.1212 28.1413Z" fill="#FBBC05"/>
              <path d="M23.4694 9.07688C27.8699 9.07688 30.8622 10.9863 32.5344 12.5725L39.1645 6.11C35.0867 2.32063 29.8061 0 23.4694 0C14.287 0 6.36607 5.2875 2.49362 12.9544L10.0918 18.8588C11.9987 13.1894 17.25 9.07688 23.4694 9.07688Z" fill="#EB4335"/>
            </svg>
            Sign in with Google
          </button>
        <% end %>

        <div class="py-3 flex items-center text-xs text-gray-400 uppercase before:flex-[1_1_0%] before:border-t before:border-gray-200 before:mr-6 after:flex-[1_1_0%] after:border-t after:border-gray-200 after:ml-6">Or</div>

        <!-- Form -->
        <form action="/sessions" method="post">
          <div class="grid gap-y-4">
            <!-- Form Group -->
            <div>
              <label for="username" class="block text-sm mb-2 text-gray-300">Username</label>
              <div class="relative">
                <input name="session[username]" placeholder="Enter Username" autofocus="autofocus" autocomplete="off" class="py-3 px-4 block w-full border-gray-400 outline-none rounded-md text-sm text-gray-500" type="email">
                <div class="hidden absolute inset-y-0 right-0 flex items-center pointer-events-none pr-3">
                  <svg class="h-5 w-5 text-red-500" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" aria-hidden="true">
                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8 4a.905.905 0 0 0-.9.995l.35 3.507a.552.552 0 0 0 1.1 0l.35-3.507A.905.905 0 0 0 8 4zm.002 6a1 1 0 1 0 0 2 1 1 0 0 0 0-2z"/>
                  </svg>
                </div>
              </div>
            </div>
            <!-- End Form Group -->

            <!-- Form Group -->
            <div>
              <div class="flex justify-between items-center">
                <label for="password" class="block text-sm mb-2 text-gray-300">Password</label>
                <a class="text-sm text-gray-200 decoration-2 hover:underline font-medium" href="#">Forgot password?</a>
              </div>
              <div class="relative">
                <input type="password" name="session[password]" placeholder="Enter Password" autocomplete="off" id="session_password" class="py-3 px-4 block w-full border-gray-400 outline-none rounded-md text-sm text-gray-500" required aria-describedby="password-error">
                <div class="hidden absolute inset-y-0 right-0 flex items-center pointer-events-none pr-3">
                  <svg class="h-5 w-5 text-red-500" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" aria-hidden="true">
                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8 4a.905.905 0 0 0-.9.995l.35 3.507a.552.552 0 0 0 1.1 0l.35-3.507A.905.905 0 0 0 8 4zm.002 6a1 1 0 1 0 0 2 1 1 0 0 0 0-2z"/>
                  </svg>
                </div>
              </div>
            </div>
            <!-- End Form Group -->

            <button type="submit" class="py-3 px-4 inline-flex justify-center items-center gap-2 rounded-md font-semibold bg-gradient-to-r from-gray-900 to-gray-600 border border-gray-500 text-gray-300 shadow-lg shadow-gray-700 hover:shadow-none hover:text-white hover:border-transparent mb-5">Sign in</button>
          </div>
        </form>
        <!-- End Form -->
      </div>
    </div>
  </div>
</main>
